[Unit]
Description=REFDM with unix datagram socket transport
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
PassEnvironment=DTNMA_LOGLEVEL REFDM_SOCKET
EnvironmentFile=-/etc/environment
ExecStart=refdm-socket -l ${DTNMA_LOGLEVEL} -a ${REFDM_SOCKET}

[Install]
WantedBy=multi-user.target
