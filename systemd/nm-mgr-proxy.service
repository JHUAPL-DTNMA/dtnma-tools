[Unit]
Description=Proxied NM Manager
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
NotifyAccess=all
PassEnvironment=ION_APP_PROXY_SOCK
EnvironmentFile=-/etc/ion/environment
ExecStart=ion_nm_wrap --listen /var/run/nm_mgr_proxy.socket --no-notify -- \
    nm_mgr_proxy -c ${ION_APP_PROXY_SOCK}
# workaround for OSAL blocking SIGTERM
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target

